{
  "name": "typescript-test-setup",
  "version": "1.0.0",
  "private": true,
  "description": "My test setup of a typescript project",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:w": "jest --watchAll",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" \"npm run test:w\""
  },
  "author": "Tom MÃ¥rdh",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "lite-server": "^2.5.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
